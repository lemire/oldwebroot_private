\begin_inset Quotes eld
\end_inset 


\begin_inset Formula \( n^{th} \)
\end_inset 

 partial sum
\begin_inset LatexCommand \index{partial sum}

\end_inset 


\begin_inset Quotes erd
\end_inset 

